<Window x:Class="Esp32.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Esp32"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" Margin="2">
                <MenuItem x:Name="MniFileExit" Header="Exit" Click="MniFileExit_Click"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- Plot -->
                <ColumnDefinition Width="Auto"/>
                <!-- Đường kẻ dọc -->
                <ColumnDefinition Width="2*"/>
                <!-- Panel -->
            </Grid.ColumnDefinitions>

            <!-- BÊN TRÁI: Đồ thị -->
            <oxy:PlotView Grid.Column="0"
                      x:Name="PlotView1"
                      Model="{Binding MyModel}"
                      Margin="10" />

            <!-- ĐƯỜNG KẺ DỌC (thay cho Separator) -->
            <Border Grid.Column="1"
                Margin="5,10"
                Width="1"
                Background="Gray" />

            <!-- BÊN PHẢI: StackPanel -->
            <StackPanel Grid.Column="2"
                    Margin="10"
                    VerticalAlignment="Top">
                <Label Content="Chọn hàm số:" FontWeight="Bold" />

                <ComboBox x:Name="FunctionComboBox"
                      Margin="0,5,0,10"
                      Width="160"
                      SelectionChanged="FunctionComboBox_SelectionChanged">
                    <ComboBoxItem Content="y = x" IsSelected="True"/>
                    <ComboBoxItem Content="y = x²"/>
                    <ComboBoxItem Content="y = sin(x)"/>
                </ComboBox>

                <Button Content="Vẽ đồ thị"
                    Width="100"
                    Height="30"
                    Click="DrawButton_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
